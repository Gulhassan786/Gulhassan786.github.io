## Typing animation code ###
 <!-- Element to contain animated typing -->
                    <span id="typing-animation" style="color: rgb(0, 157, 255); font-size: 18px;"></span>

                    <script>

                        // Initialize the typing animation
                        const typingAnimationElement = document.getElementById('typing-animation');

                        // Create an array of typing text
                        const typingTexts = [
                            'ML Engineer  ',
                            'DL Engineer  ',
                            'Coder on LeetCode ',
                            'Problem Solver',
                            'Artical Writer ',
                            'Critical Thinker'
                        ];
                        // Create a function to display the typing animation for a given text
                        function playTypingAnimation(text) {
                            // Loop through each character and add it to the element
                            for (let i = 0; i < text.length; i++) {
                                setTimeout(() => {
                                    typingAnimationElement.textContent += text[i];
                                }, i * 100); // Increase the delay to slow down the typing animation
                            }

                            // Once the animation is complete, toggle the cursor visibility
                            setTimeout(() => {
                                toggleCursor();
                            }, text.length * 120);

                            // Function to toggle cursor visibility
                            function toggleCursor() {
                                if (typingAnimationElement.textContent.endsWith('|')) {
                                    typingAnimationElement.textContent = typingAnimationElement.textContent.slice(0, -1);
                                } else {
                                    typingAnimationElement.textContent += '|';
                                }
                            }

                            // Restart the typing animation loop
                            setTimeout(() => {
                                typingAnimationElement.textContent = ''; // Clear the text
                                playTypingAnimation(typingTexts[(typingTexts.indexOf(text) + 1) % typingTexts.length]); // Start over with the next text
                            }, (text.length + 1) * 120); // Wait for text to be fully typed before restarting
                        }

                        // Start the typing animation loop
                        playTypingAnimation(typingTexts[0]);

                    </script>
                    
                    
